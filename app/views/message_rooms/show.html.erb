<div class="message_room">

  <% if student_signed_in? %>
    <div class="message_title">
      <%= @worker.name %>とのメッセージ
    </div>


  <% elsif worker_signed_in? %>
    <div class="message_title">
      <%= @student.name %>とのメッセージ
    </div>

  <% end %>

  <br>

  <div class="messages">
    <%= render partial: "message", collection: @messages %>
  </div>

  <div class="form">

    <%= form_for Message.new do |f| %>
    <%= f.hidden_field :message_room_id, value: @message_room.id %>
    <%= f.hidden_field :user_type, value: @current_user_type %>

      <%= f.text_field :text, class: "form-control" %>

      <%= f.submit "送信", class: "btn btn-primary withripple" %>

    <% end %>
  </div>

</div>